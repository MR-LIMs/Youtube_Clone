extends layouts/main

block content
  .form-container
    form(action=routes.editVideo, method="post")
      label(for="videoTitle") #{videos.title}
      input(type="text", name="videoTitle", placeholder="Title")
      textarea(value="", placeholder="Description")
      input(type="submit" value="Update Video")
    a.form-container__link(href=routes.home) Delete Video