mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=video.src)
    .videoPlayer__controls
      .videoPlayer__column
        span
          span#currentTime 00:00:00
          span / 
          span#totalTime 00:00:00
        span#jsVolumeButton
          i.fas.fa-volume-up
          input.volume-bar(type="range", min=0, max=1, value=1, step=0.01)
      .videoPlayer__column
        span#jsPlayButton
          i.fas.fa-play
      .videoPlayer__column
        span#jsFullScreen
          i.fas.fa-expand